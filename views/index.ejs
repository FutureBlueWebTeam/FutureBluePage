<!DOCTYPE html>
<html>
<head>
	<!-- Standard Meta -->
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

	<!-- Display the favicon -->
	<link rel="shortcut icon" href="//www.ibm.com/favicon.ico" />

	<% include common/meta %>

	<meta name="description" content="Connecting you to the IBM Canada student community. Future Blue is a community for students, by students, at IBM Canada.">
	<meta name="keywords" content="<% include common/keywords %> Index, Recent Posts, About" />

	<!-- Site Properities -->
	<title>Future Blue Canada</title>
	
	<!-- Stylesheets -->
	<link href="//1.www.s81c.com/common/v18/css/www.css" rel="stylesheet" />
    <link href="/css/styles.css" rel="stylesheet" />
	<link href="/css/index.css" rel="stylesheet" />
	
	<!-- Scripts -->
	<% include common/meta-json %>
	
  	<!--<script src="//www.ibm.com/common/stats/ida_stats.js"></script>-->
  	<script src="//1.www.s81c.com/common/v18/js/www.js"></script>
  	<script src="//1.www.s81c.com/common/v18/js/masonry.js"></script>
	
	<% include common/settings %>
</head>
<body id="ibm-com" class="ibm-type">
	<div id="ibm-top" class="ibm-landing-page"> 
																		
		<!-- Add the navigation bar -->
		<% include common/nav.ejs %>
		
		<div class="wpthemeFrame">
			<div id="ibm-content-wrapper"> 
				<main role="main" aria-label="FutureBlue"> 
					<div class="wpthemeMainContent" role="main"> 
						<div class="wpthemeInner"> 
							<div id="layoutContainers" class="wpthemeLayoutContainers wpthemeLayoutContainersHidden">
								<div class="wpthemeInner">
									<div id="ibm-pcon">
										<div class="wptheme1Col">
											<div class="component-container ibmDndColumn wpthemePrimaryContainer" name="ibmMainContainer">
												<div class="component-control"> 
													<section class="ibmPortalControl wpthemeControl wpthemeHidden a11yRegionTarget" role="region">
														<div class="wpthemeControlBody wpthemeOverflowAuto wpthemeClear">
															<div class="oobSampleRichText">
																<div id="ibm-northstar-futureblue" class="ibm-band ibm-parallax-scroll">
																	<div class="ibm-columns">	
																		<div class="ibm-col-6-1"></div> 
																		<div class="ibm-col-6-4">
																			<div class="futureblue-header">Future Blue Canada</div> 
																			<div class="futureblue-text">Connecting you to the IBM Canada student community</div>
																		</div>
																		<div class="ibm-col-6-1"></div>
																	</div>
																</div>
															</div>
														</section> 
														<section class="ibmPortalControl wpthemeControl wpthemeHidden a11yRegionTarget" role="region"> 
															<div class="wpthemeControlBody wpthemeOverflowAuto wpthemeClear"> 
																<div class="oobSampleRichText"> 
																	<div class="ibm-band" style="background-color: #264A60;" dir="ltr"> 
																		<div class="ibm-columns" dir="ltr"> 
																			<div class="ibm-col-6-1"></div>
																			<div class="ibm-col-6-4">
																				<h1 class="ibm-h1 ibm-light futureblue-about-title"> 
																					<b>What is Future Blue?</b>
																				</h1> 
																				<p class="ibm-light futureblue-about">
																					Future Blue is a student-operated intern organization at 
																					<a href="http://www.ibm.com/">IBM</a>, which provides resources, 
																					activities, and opportunities for all students working for IBM in 
																					Canada.
																				</p> 
																				<p class="ibm-light futureblue-about"> 
																					Our goal is to share the best of IBM with our interns, and we have 
																					multiple teams that students can get involved in to meet new people, 
																					learn new skills, and make their internship at IBM a more memorable 
																					and rewarding experience.
																				</p>
																				<center><p class="ibm-button-link futureblue-about-btn">
																					<a href="/about" class="ibm-btn-pri ibm-btn-white">Read More!</a>
																				</p></center>
																			</div>
																			<div class="ibm-col-6-1"></div> 
																		</div>
																	</div>
																</div>
															</div>
														</section>
														<section class="ibmPortalControl wpthemeControl wpthemeHidden a11yRegionTarget" role="region"> 
															<div class="wpthemeControlBody wpthemeOverflowAuto wpthemeClear"> 
																<div class="oobSampleRichText">
																	<div class="ibm-band" style="background-color: #ECF1F4;" dir="ltr">
																		<div class="ibm-columns" dir="ltr">
																			<div class="ibm-col-6-2"></div>
																			<div class="ibm-col-6-2">
																				<h1 class="ibm-h1 ibm-light futureblue-about-posts"><b><center>Recent Blog Posts</center></b></h1>
																			</div> 
																			<div class="ibm-col-6-2"></div>
																		</div>
																		<div class="ibm-columns ibm-cards" data-widget="masonry" data-items=".ibm-col-6-2" dir="ltr"> 
																			<% recentPosts.forEach(function(post, i) { %> 
																				<div class="ibm-col-6-2">
																					<a href="/blog/post/<%= post.id %>"> 
																						<div class="ibm-card" dir="ltr">
																							<div class="ibm-card__image">
																								<img src="<%= post.featuredImagePath %>" class="ibm-resize" /> 
																							</div>
																							<div class="ibm-card__content"> 
																								<h3 class="ibm-bold ibm-h3"><%= post.title %></h3>
																							</div>
																							<div class="ibm-card__bottom">
																								<span class="inline tag ibm-btn-<%= post.colour %>-50"><%= post.category %></span>
																								<p class="ibm-padding-bottom-0"><%= post.datePosted %> by <%= post.author %></p>
																							</div>
																						</div> 
																					</a>
																				</div>
																			<% }); %>
																		</div>
																	</div>
																</div>
															</div>
														</section>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</main>
			</div>
		</div>
		<button type="button" class="ibm-btn-pri ibm-contact--bg-gray-70 ibm-contact-widget-btn ibm-active" value="">Contact Future Blue</button>
		<% include common/footer.ejs %>
	</div>

	<script src="/libs/jquery.min.js"></script>
	<script src="/js/common.js"></script>
	<script src="/js/index.js"></script>
</body>
</html>
